@model ViewModel

@{
    ViewData["Title"] = "Details";
}
@section styles {
    <link href="@Url.Content("~/css/Profile.css")" rel="stylesheet" />
}
@if(Model.User.IsEmailConfirmed == false)
{
    <div class="alert alert-warning" role="alert">
        Bạn chưa xác thực email. Nhấn vào đường dẫn sau để xác thực: <a asp-controller="Profile" asp-action="ConfirmEmail" class="alert-link">Xác thực email</a>.
    </div>
}

<div class="container d-flex align-items-center justify-content-center">
    <form asp-action="Index" class="formCtn">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="User.ID" name="ID" />
        <input type="hidden" asp-for="User.Role" name="Role" />
        <input type="hidden" asp-for="User.IsEmailConfirmed" name="IsEmailConfirmed" />
        <h1>Thông tin tài khoản</h1>
        <div class="form-group pad">
            <label asp-for="User.Email"></label>
            <div class="input-group mb-3">
                <input asp-for="User.Email" class="form-control" name="Email" value="@Model.User.Email" readonly>
            </div>
            <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group pad">
            <label asp-for="User.Name"></label>
            <div class="input-group mb-3">
                <input asp-for="User.Name" class="form-control" name="Name" value="@Model.User.Name" aria-describedby="button-addon2" readonly>
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Thay đổi</button>
            </div>
            <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group pad">
            <label asp-for="User.Password"></label>
            <div class="input-group mb-3">
                <input asp-for="User.Password" class="form-control" name="Password" type="password" value="@Model.User.Password" aria-describedby="button-addon3" readonly>
                <button class="btn btn-outline-secondary" type="button" id="button-addon3">Thay đổi</button>
            </div>
            <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
        </div>
        <input type="submit" id="submit" class="btn btn-default" name="btn-save" value="Lưu thông tin">
    </form>
</div>

