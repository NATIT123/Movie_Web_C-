@model ViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>XÓA</h1>

<h3>BẠN CÓ CHẮC CHẮN MUỐN XÓA LIÊN KẾT PHIM VÀ THỂ LOẠI NÀY?</h3>
<div>
    <h4>MovieGenre</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Phim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MG.Movie.Name)
        </dd>
        <dt class = "col-sm-2">
            Thể loại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MG.Genre.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MG.MovieID" name="MovieID"/>
        <input type="hidden" asp-for="MG.GenreID" name="GenreID" />
        <input type="submit" value="XÓA" class="btn btn-danger" /> |
        <a asp-action="Index">Quay về danh sách</a>
    </form>
</div>
