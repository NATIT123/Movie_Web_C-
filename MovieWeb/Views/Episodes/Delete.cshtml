@model ViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>XÓA</h1>

<h3>Bạn có chắc chắn muốn xóa thông tin tập phim này?</h3>
<div>
    <h4>THÔNG TIN TẬP PHIM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Episode.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.videoSrc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Episode.videoSrc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Episode.Movie.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Episode.ID" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay về danh sách</a>
    </form>
</div>
