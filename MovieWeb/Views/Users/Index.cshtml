@model ViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>DANH SÁCH THÔNG TIN TÀI KHOẢN</h1>

<p>
    <a asp-action="Create">Thêm</a>
</p>
<table id="example" class="display cell-border order-column" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.IsEmailConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEmailConfirmed)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>





