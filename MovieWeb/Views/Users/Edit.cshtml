@model ViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>CHỈNH SỬA</h1>

<h4>THÔNG TIN TÀI KHOẢN</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" name="ID" />
            <div class="form-group">
                <label asp-for="User.Name" class="control-label"></label>
                <input asp-for="User.Name" class="form-control" name="Name" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" name="Email" readonly/>
                <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" name="Password" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Role" class="control-label"></label>
                <select asp-for="User.Role" name="Role">
                    <option value="Người dùng" selected="selected">Người dùng</option>
                    @if (User.Claims.FirstOrDefault(x => x.Type == "Role")?.Value == "Chủ sở hữu")
                    {
                        <option value="Quản lý">Quản lý</option>
                        <option value="Chủ sở hữu">Chủ sở hữu</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="User.IsEmailConfirmed" class="control-label"></label>
                <select asp-for="User.IsEmailConfirmed" name="IsEmailConfirmed">
                    <option value="true" selected="selected">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về danh sách</a>
</div>

