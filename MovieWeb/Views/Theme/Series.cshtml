@model ViewModel
@using X.PagedList.Mvc.Core
@using X.PagedList
@{
    ViewData["Title"] = "Phim bộ";
}
@section styles {
    <link href="@Url.Content("~/css/Home.css")" rel="stylesheet" />
}
<!-- HERO SLIDER -->
@{
    Html.RenderPartial("HeroSection");
}

<!-- SLIDER -->
@{
    Html.RenderPartial("Slider");
}

<!-- MOVIE SECTION -->
<div class="movie-frame">
    <div class="movWrapper">
        <div class="tag">PHIM BỘ</div>
        <div class="container-fluid movie-container">
            <div class="row">
                @foreach (var movie in Model.Theme)
                {
                    <div class="col-6 col-lg-3 px-0 d-flex justify-content-center">
                        <div class="mov">
                            <div class="episode">@movie.Status</div>
                            <img src=@movie.imgSrc alt="">
                            <div class="movie_info">
                                <div class="title">@movie.Name</div>
                                <div class="icon_info">
                                    <div class="score">
                                        <i class="bx bxs-star"></i>
                                        <span>@movie.Rating</span>
                                    </div>
                                    <div class="time">
                                        <i class="bx bxs-time"></i>
                                        <span>@movie.Duration</span>
                                    </div>
                                    <div class="category"><span>@movie.Type</span></div>
                                    <div class="age"><span>13+</span></div>
                                </div>
                                <div class="description">@movie.Description</div>
                                <div class="btn1">
                                    <a asp-controller="Detail" asp-action="Index" asp-route-id="@movie.ID" class="btnct btn-hover">
                                        <i class="bx bxs-right-arrow"></i>
                                        <span>Watch now</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@Html.PagedListPager((IPagedList)Model.Theme, x=>Url.Action("Nation",new{page=x}))