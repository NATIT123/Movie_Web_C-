@model ViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>DANH SÁCH THÔNG TIN PHIM</h1>

<p>
    <a asp-action="Create">Thêm thông tin phim</a>
</p>
<p>
    <a asp-action="Index" asp-controller="MovieGenres">Thêm thể loại vào phim</a>
</p>
<p>
    <a asp-action="Index" asp-controller="Episodes">Thêm tập phim</a>
</p>
<table id="example" class="display cell-border order-column" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.updatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.realeasedYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Nation.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.realeasedYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
