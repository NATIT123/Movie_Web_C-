@model ViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>CHỈNH SỬA</h1>

<h4>THÔNG TIN QUỐC GIA PHIM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nation.ID" name="ID"/>
            <div class="form-group">
                <label asp-for="Nation.Name" class="control-label"></label>
                <input asp-for="Nation.Name" class="form-control" name="Name"/>
                <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về danh sách</a>
</div>
